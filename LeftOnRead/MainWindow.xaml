<Window x:Class="LeftOnRead.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeftOnRead"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Canvas
        Name="MainCanvas"
        Background="#100220"
        Focusable="True"
        KeyDown="KeyIsDown"
        KeyUp="KeyIsUp"
        >
        <Rectangle
            Name="BoxElement"
            Width="40"
            Height="40"
            Canvas.Left="100"
            Canvas.Top="100"
            Fill="#fff"
            />
        <Border
            Width="120"
            Height="25"
            Canvas.Left="60"
            Canvas.Top="145"
            Background="LightBlue"
            CornerRadius="10"
            Tag="Platform"/>
        <Border
            Width="120"
            Height="25"
            Canvas.Left="300"
            Canvas.Top="400"
            Background="LightBlue"
            CornerRadius="10"
            Tag="Platform2"/>
    </Canvas>
</Window>
